<div class="dashboard">
    <!-- Sidebar -->
    <div class="sidebar">
      <h2>Dashboard</h2>
      <a href="/account">Account Overview</a>
      <% if (accountData.account_type === "Employee" || accountData.account_type === "Admin") { %>
        <a href="/inv/">Inventory Management</a>
      <% } %>
    </div>

    <!-- Main Content -->
    <div class="main-content">
      <!-- Header -->
      <div class="header">
        <h1>Account Management</h1>
        <p>Welcome <%= accountData.account_firstname %></p>
      </div>

      <!-- Main Dashboard Cards -->
      <div class="card">
        <p>You're logged in.</p>
        <a href="/account/update/<%= accountData.account_id %>" class="button">Update Account Information</a>

        <% if (messages && messages.length > 0) { %>
          <div class="flash-messages">
            <% messages.forEach(message => { %>
              <p><%= message %></p>
            <% }) %>
          </div>
        <% } %>

        <% if (errors) { %>
          <div class="errors">
            <p><%= errors %></p>
          </div>
        <% } %>
      </div>

      <% if (accountData.account_type === "Employee" || accountData.account_type === "Admin") { %>
        <div class="card">
          <h3>Inventory Management</h3>
          <a href="/inv/" class="button">Go to Inventory Management</a>
        </div>
      <% } %>
    </div>
  </div>