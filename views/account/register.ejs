<section class="login-container">
  <h1><%= title %></h1>

  <% if (messages && messages.error) { %>
    <div class="flash error">
      <%= messages.error %>
    </div>
  <% } %>

  <% if (messages && messages.success) { %>
    <div class="flash success">
      <%= messages.success %>
    </div>
  <% } %>

  <form action="/account/register" method="POST" class="login-form">
    <label for="account_firstname">First Name</label>
    <input type="text" id="account_firstname" name="account_firstname" required
      value="<%= typeof data !== 'undefined' ? data.account_firstname : '' %>">

    <label for="account_lastname">Last Name</label>
    <input type="text" id="account_lastname" name="account_lastname" required
      value="<%= typeof data !== 'undefined' ? data.account_lastname : '' %>">

    <label for="account_email">Email</label>
    <input type="email" id="account_email" name="account_email" required
      value="<%= typeof data !== 'undefined' ? data.account_email : '' %>">

    <label for="account_password">Password</label>
    <input type="password" id="account_password" name="account_password" required
      title="Minimum 12 characters, 1 uppercase, 1 number, and 1 special character">

    <button type="submit">Register</button>
  </form>
</section>
