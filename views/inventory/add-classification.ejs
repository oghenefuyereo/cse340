<%- include('../partials/messages') %>

<div class="form-container">
  <h1>Add New Classification</h1>

  <form id="addClassificationForm" class="form" action="/inv/add-classification" method="POST" novalidate>
    <label for="classification_name">Classification Name:</label>
    <input
      type="text"
      id="classification_name"
      name="classification_name"
      required
      pattern="^[a-zA-Z0-9]+$"
      title="Classification name must not contain spaces or special characters"
    />
    <button type="submit">Add Classification</button>
  </form>
</div>

<script>
  // Client-side validation on submit
  const form = document.getElementById('addClassificationForm');
  form.addEventListener('submit', function(event) {
    const input = document.getElementById('classification_name');
    const pattern = /^[a-zA-Z0-9]+$/;

    if (!pattern.test(input.value)) {
      event.preventDefault();
      alert("Classification name must not contain spaces or special characters.");
      input.focus();
    }
  });
</script>
