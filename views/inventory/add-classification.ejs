<%- include('../partials/messages') %>

<div class="form-container">
  <h1>Add New Classification</h1>

  <% if (errors && errors.length > 0) { %>
    <ul class="errors" style="color: red; margin-bottom: 1em;">
      <% errors.forEach(function(error) { %>
        <li><%= typeof error === 'string' ? error : (error.msg || 'Unknown error') %></li>
      <% }) %>
    </ul>
  <% } %>

  <form id="addClassificationForm" class="form" action="/inv/add-classification" method="POST" novalidate>
    <label for="classification_name">Classification Name:</label>
    <input
      type="text"
      id="classification_name"
      name="classification_name"
      required
      pattern="^[a-zA-Z0-9]+$"
      title="Classification name must not contain spaces or special characters"
      value="<%= typeof classification_name !== 'undefined' ? classification_name : '' %>"
    />
    <button type="submit">Add Classification</button>
  </form>
</div>
