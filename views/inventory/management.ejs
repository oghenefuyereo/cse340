<%- include('../partials/messages') %>

<h1>Inventory Management</h1>

<% if (flash && flash.length > 0) { %>
  <div class="flash-message success" role="alert" style="background-color: #e6ffe6; padding: 10px; border: 1px solid #66cc66; color: #2d662d; margin-bottom: 1rem;">
    <% if (Array.isArray(flash)) { %>
      <% flash.forEach(function(msg) { %>
        <p><%= msg %></p>
      <% }) %>
    <% } else { %>
      <p><%= flash %></p>
    <% } %>
  </div>
<% } %>

<ul>
  <li><a href="/inv/add-classification">Add New Classification</a></li>
  <li><a href="/inv/add-inventory">Add New Inventory Item</a></li>
</ul>

<h2>Manage Inventory</h2>
<p>Select a classification to see inventory items.</p>

<%- classificationSelect %> <!-- Render the classification dropdown -->

<table id="inventoryDisplay" aria-label="Inventory items"></table>

<noscript>JavaScript must be enabled to use this page.</noscript>

<script src="/js/inventory.js" defer></script>
